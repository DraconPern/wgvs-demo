extends ../layout
block title
  |  Events
block content
  h3 Events

  table#events.table.table-bordered
    thead
      tr
        th name
        th description
        th ops
    tbody
      each event in events ? events : []
        tr
          td
            = event.name
          td
            = event.description
          td
            a.btn.btn-default(href='/events/' + event.eventId) Edit
  p
    a.btn.btn-default(href='/events/new') New
